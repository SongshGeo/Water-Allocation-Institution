@article{wang2021d,
  title = {How Complementarity and Selection Affect the Relationship between Ecosystem Functioning and Stability},
  author = {Wang, Shaopeng and Isbell, Forest and Deng, Wanlu and Hong, Pubin and Dee, Laura E. and Thompson, Patrick and Loreau, Michel},
